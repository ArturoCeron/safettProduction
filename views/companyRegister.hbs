                <label for="txtNumber" class="col-form-label">Número</label>
                <input id="txtNumber" type="text" class="form-control" placeholder="Número" name="streetNumber" required>
              </div>
            </div>
            <div class="row">
              <div class="col-8">
                <label for="txtSuburb" class="col-form-label">Colonia</label>
                <input id="txtSuburb" type="text" class="form-control" placeholder="Colonia" name="suburb" required>
              </div>
              <div class="col-4">
                <label for="txtZip" class="col-form-label">Código postal</label>
