            <label for="txtMainActivity" class="col-form-label">Actividad principal</label>
            <input id="txtMainActivity" type="text" class="form-control" placeholder="Actividad principal" name="mainRole" required>
            <label for="txtWebSite" class="col-form-label">Sitio web</label>
            <input id="txtWebSite" type="text" class="form-control" placeholder="Sitio web" name="webPage">
            <label for="txtDescription" class="col-form-label">Descripción</label>
            <input id="txtDescription" type="text" class="form-control" placeholder="Descripción" name="description" required>
          </div> 
