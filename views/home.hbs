<form action="/home" method="POST">
    <div id="main-banner" class="container-fluid">
        <div class="container">
            <div class="col">
                <div id="homeSearchBar" class="row justify-content-center">
                    <div class="col-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i id="searchIcon"
                                        class="material-icons">search</i></span>
                            </div>
                            <input type="text" id="buscarEmpresa" class="form-control" placeholder="Puesto o empresa"
                                name="search">
                        </div>
                    </div>
                    <div class="col-auto">
                        <button class="buttonBorder btn btn-outline-success">Buscar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<div id="containerCompany" class="container">
